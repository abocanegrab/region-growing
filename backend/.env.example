# App Configuration
APP_NAME="Sistema Híbrido de Detección de Estrés Vegetal"
APP_VERSION="2.0.0"
DEBUG=True
PORT=8000

# CORS Origins (comma-separated)
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Sentinel Hub Credentials
# Get yours at: https://apps.sentinel-hub.com/dashboard/
# 1. Create an account (free tier available)
# 2. Go to User Settings > OAuth clients
# 3. Create a new OAuth client
# 4. Copy Client ID and Client Secret below
SENTINEL_HUB_CLIENT_ID=your-client-id-here
SENTINEL_HUB_CLIENT_SECRET=your-client-secret-here

# Logging Configuration
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Timeouts (in seconds)
# Maximum time for Sentinel Hub API calls
SENTINEL_HUB_TIMEOUT=30
# Maximum time for complete analysis workflow
ANALYSIS_TIMEOUT=60

